@model Ensalamento.Dominio.Categoria

@{
    ViewBag.Title = "Apagar Categoria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="intro" class="intro-parallax2">
    <div class="container">
        <h2>Apagar Categoria</h2>

        <h3>Você deseja realmente excluir a categoria: <strong> @Html.DisplayFor(model => model.Nome)</strong> ?</h3>
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Nome)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.DataCadastro)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DataCadastro)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="col-md-offset-2 col-md-10">
                    <input type="reset" value="Voltar" class="btn btn-default" />
                    <input type="submit" value="Apagar" class="btn btn-default" />
                </div>

            }
        </div>
    </div>
</section>
